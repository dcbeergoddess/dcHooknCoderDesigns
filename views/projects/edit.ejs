<% layout('layouts/boilerplate') %> 
<!-- BOOTSTRAP GRID FORM -->
<div class="row">
  <h1 class="text-center">Edit Project</h1>
  <div class="col-6 offset-3">
    <form action="/projects" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="project[title]" value="<%= project.title %>" required>
      </div>
      <div>
        <label class="form-label" for="craft">Craft</label>
        <input class="form-control" type="text" id="craft" name="project[craft]" value="<%= project.craft %>" required> 
      </div>
      <div>
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" id="image" name="project[image]" value="<%= project.image %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label" or="yarnCategory">Yarn Weight Category</label>
        <input class="form-control" type="text" id="yarnCategory" name="project[yarnCategory]" value="<%= project.yarnCategory %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="tool">Project Tool</label>
        <input class="form-control" type="text" id="tool" name="project[tool]" value="<%= project.tool %>" required>
      </div>
    <div class="mb-3">
      <label class="form-label" for="toolSize">Project Tool Size:</label>
      <div class="input-group">
        <input type="text" class="form-control" id="toolSize" name="project[toolSize]"placeholder="0" aria-label="toolSize" aria-describedby="toolSize-label" value="<%= project.toolSize %>" required>
        <span class="input-group-text" id="toolSize-label">mm</span>
        <div class="valid-feedback">
          Looks Good!
        </div>
      </div>
    </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Project</button>
      </div>
    </form>
    <a href="/projects/<%= project.id %> ">Back to Project</a>
  </div>
</div>